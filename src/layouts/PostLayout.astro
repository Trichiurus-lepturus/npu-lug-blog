---
import BaseLayout from "./BaseLayout.astro";
import FormattedDate from "../components/FormattedDate.astro";

// Define Author type matching the schema
type Author = {
  name: string;
  url?: string | undefined; // URL is optional
};

// Define the props type clearly
interface Props {
  title: string;
  description?: string;
  pubDate?: Date;
  authors?: Author[];
  originalTitle?: string;
  originalUrl?: string;
}

// Assert Astro.props to the defined type
const { title, description, pubDate, authors, originalTitle, originalUrl } =
  Astro.props as Props;
---

<BaseLayout title={title} description={description}>
  <main>
    <div class="back-link">
      <a href="/blog">&larr; Back to Blog</a>
    </div>
    <article>
      <h1>{title}</h1>
      <div class="metadata">
        {
          pubDate && (
            <div class="date">
              <FormattedDate date={pubDate} />
            </div>
          )
        }
        {
          authors && authors.length > 0 && (
            <div class="authors">
              <span>By: </span>
              {authors.map((author: Author, index: number) => (
                <span class="author-item">
                  {author.url ? (
                    <a
                      href={author.url}
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      {author.name}
                    </a>
                  ) : (
                    <span>{author.name}</span>
                  )}
                  {index < authors.length - 1 && ", "}
                </span>
              ))}
            </div>
          )
        }
      </div>
      {
        originalUrl && (
          <div class="original-article-info">
            <p>
              Originally published at:{" "}
              <a href={originalUrl} target="_blank" rel="noopener noreferrer">
                {originalTitle || originalUrl}
              </a>
            </p>
          </div>
        )
      }
      <slot />
    </article>
  </main>
</BaseLayout>
<style>
  .back-link {
    margin-bottom: var(--spacing-lg);
  }
  .back-link a {
    color: var(--color-secondary);
    text-decoration: none;
  }
  .back-link a:hover {
    color: var(--color-primary);
    text-decoration: underline;
  }
  article {
    /* Add styles for article content if needed */
  }
  article h1 {
    margin-bottom: var(--spacing-sm);
    line-height: 1.3;
  }
  .metadata {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-md);
    color: var(--color-secondary);
    font-size: 0.9em;
    margin-bottom: var(--spacing-xl);
  }
  .date {
    /* Styles for date element */
  }
  .authors {
    /* Style for the authors container */
  }
  .author-item {
    /* Style for each author span */
  }
  .author-item a {
    color: var(--color-secondary);
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
  }
  .author-item a:hover {
    color: var(--color-primary);
  }
  .original-article-info {
    background-color: var(--color-footer-bg);
    padding: var(--spacing-md);
    margin-bottom: var(--spacing-xl);
    border-left: 4px solid var(--color-accent);
    font-size: 0.9em;
  }
  .original-article-info p {
    margin: 0;
    color: var(--color-secondary);
  }
  .original-article-info a {
    color: var(--color-primary);
    text-decoration: none;
  }
  .original-article-info a:hover {
    text-decoration: underline;
  }
</style>
