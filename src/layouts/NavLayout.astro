---
import BaseLayout from "./BaseLayout.astro";
// import Header from "../components/Header.astro"; // Remove Header import

const { title, description } = Astro.props;
---

<BaseLayout title={title} description={description}>
  {/* <Header /> Remove Header usage */}
  <main>
    {/* Add back button similar to PostLayout, but linking to home */}
    <div class="back-link">
      <a href="/">&larr; Back to Home</a>
    </div>
    <slot />
  </main>
</BaseLayout>
<style>
  /* Add styles for the back link, similar to PostLayout */
  .back-link {
    margin-top: var(--spacing-xxl);
    margin-bottom: var(--spacing-lg);
  }
  .back-link a {
    color: var(--color-secondary);
    text-decoration: none;
  }
  .back-link a:hover {
    color: var(--color-primary);
    text-decoration: underline;
  }
  /* Remove padding-top as header is no longer fixed */
