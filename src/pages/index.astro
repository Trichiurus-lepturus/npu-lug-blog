---
import BaseLayout from "../layouts/BaseLayout.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
const githubUrl = "https://github.com/withastro/astro"; // TODO: Replace with your org's GitHub URL
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <main class="home-main">
    <div class="logo-container">
      <!-- Replace placeholder with actual logo -->
      <img src="/images/logo.svg" alt="Logo" class="site-logo" />
    </div>
    <nav class="home-nav">
      <a href="/blog">Blog</a>
      <a href="/about">About</a>
      <a href={githubUrl} target="_blank" rel="noopener noreferrer">GitHub</a>
    </nav>
  </main>
</BaseLayout>

<style>
  .home-main {
    display: flex;
    flex-direction: column;
    justify-content: center; /* Vertical centering */
    align-items: center; /* Horizontal centering */
    min-height: calc(
      100vh - var(--footer-height)
    ); /* Full height minus footer */
    text-align: center;
    padding-top: 0; /* Override default main padding */
    padding-bottom: 0;
  }
  .logo-container {
    margin-bottom: var(--spacing-xl);
  }
  /* Remove placeholder styles */
  /* 
  .placeholder-logo { ... } 
  */
  /* Add styles for the actual logo */
  .site-logo {
    width: 50vw; /* Adjust width as needed */
    height: auto; /* Maintain aspect ratio */
    max-height: 200px; /* Optional: Limit height */
    display: block; /* Ensure it behaves as a block element */
    margin: 0 auto; /* Center if needed within container */
  }
  .home-nav {
    display: flex;
    gap: var(--spacing-lg);
  }
  .home-nav a {
    font-size: 1.2rem;
    color: var(--color-secondary);
    text-decoration: none;
    padding: var(--spacing-sm) var(--spacing-md);
    border: 1px solid var(--color-border);
    border-radius: 4px;
    transition:
      background-color 0.2s ease,
      color 0.2s ease;
  }
  .home-nav a:hover {
    background-color: var(--color-primary);
    color: var(--color-background);
    border-color: var(--color-primary);
  }
</style>
