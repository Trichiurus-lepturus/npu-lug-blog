---
// Import the GitHub icon if you want to use an Astro icon
// import { Icon } from 'astro-icon/components'; // Example if using astro-icon
const today = new Date();
// const orgName = "[Your Org Name]"; // TODO: Replace with your org name
const orgName = "NPULUG"; // Update org name
---

<footer>
  <div class="footer-content">
    <span class="copyright"
      >&copy; {today.getFullYear()} {orgName}. 版权所有。</span
    >
    {/* GitHub link removed */}
  </div>
</footer>
<style>
  /* Remove all previous styles from Footer.astro */

  /* Add new styles scoped to the footer content arrangement */
  .footer-content {
    display: flex;
    justify-content: center; /* Center the copyright text */
    align-items: center;
    width: 100%;
    max-width: var(--content-width);
    margin: 0 auto;
    height: 100%;
  }

  .copyright {
    font-size: 0.8rem;
  }

  /* Remove github-link styles */

  .sr-only {
    /* Keep sr-only for potential future use */
    border: 0;
    padding: 0;
    margin: 0;
    position: absolute !important;
    height: 1px;
    width: 1px;
    overflow: hidden;
    clip: rect(1px 1px 1px 1px);
    clip: rect(1px, 1px, 1px, 1px);
    clip-path: inset(50%);
    white-space: nowrap;
  }
</style>
